<div class="comment">
	<p class="comment-content"><%= comment.content %></p>
	<p class="comment-posted-by">Posted by:<%= comment.user.email %><%= time_ago_in_words(comment.created_at) %> ago.</p>
	<div class="links">
		<% if user_signed_in? %><!--a condition to check if user is loged in before limitin the action-->
		  <% if comment.user_id == current_user.id %><!--a condition to chech if the user requesting a certain actin is the one who created it-->

			<%= link_to "Edit", edit_message_comment_path(comment.message, comment) %>
			<%= button_to "Delete", message_comment_path(comment.message, comment), method: :delete, data:{confirm:"are you sure?"} %>
		  <%end%>
		<%end%>
	</div>
</div>